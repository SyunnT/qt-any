{
  "name": "qt-any",
  "displayName": "Qt Any",
  "description": "%qt-any.description%",
  "version": "2.0.0",
  "publisher": "Syunn",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SyunnT/qt-any"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "%qt-any.configuration.title%",
      "properties": {
        "qt-any.qtPath": {
          "type": "string",
          "default": "",
          "description": "%qt-any.configuration.qtPath.description%"
        }
      }
    },
    "commands": [
      {
        "command": "qt-any.createClass",
        "title": "%qt-any.command.createClass.title%"
      },
      {
        "command": "qt-any.createUiClass",
        "title": "%qt-any.command.createUiClass.title%"
      },
      {
        "command": "qt-any.createCppClass",
        "title": "%qt-any.command.createCppClass.title%"
      },
      {
        "command": "qt-any.createQrc",
        "title": "%qt-any.command.createQrc.title%"
      },
      {
        "command": "qt-any.openInDesigner",
        "title": "%qt-any.command.openInDesigner.title%"
      },
      {
        "command": "qt-any.openInLinguist",
        "title": "%qt-any.command.openInLinguist.title%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "qt-any.openInDesigner",
          "when": "resourceExtname == .ui",
          "group": "navigation"
        },
        {
          "command": "qt-any.openInLinguist",
          "when": "resourceLangId == qt-ts",
          "group": "navigation"
        },
        {
          "command": "qt-any.createCppClass",
          "group": "1_modification@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "qt-any.createClass",
          "group": "1_modification@2",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "qt-any.createUiClass",
          "group": "1_modification@3",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "qt-any.createQrc",
          "group": "1_modification@4",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "languages": [
      {
        "id": "qt-ui",
        "aliases": [
          "%qt-any.language.ui.alias%",
          "ui"
        ],
        "extensions": [
          ".ui"
        ],
        "icon": {
          "light": "./resources/ui-file.svg",
          "dark": "./resources/ui-file.svg"
        }
      },
      {
        "id": "qt-ts",
        "aliases": [
          "%qt-any.language.ts.alias%",
          "ts"
        ],
        "extensions": [],
        "firstLine": "^\\s*<",
        "icon": {
          "light": "./resources/ts-file.svg",
          "dark": "./resources/ts-file.svg"
        }
      },
      {
        "id": "qt-qrc",
        "aliases": [
          "%qt-any.language.qrc.alias%",
          "qrc"
        ],
        "extensions": [
          ".qrc"
        ],
        "icon": {
          "light": "./resources/qrc-file.svg",
          "dark": "./resources/qrc-file.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.0.0"
  }
}
