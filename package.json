{
  "name": "qt-any",
  "displayName": "Qt Any",
  "description": "Create Qt classes (UI/Non-UI) and open .ui files in Qt Designer",
  "version": "2.0.0",
  "publisher": "Syunn",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SyunnT/qt-any"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:qtAny.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qt-any-explorer",
          "title": "Qt Any",
          "icon": "resources/qt-icon.svg"
        }
      ]
    },
    "views": {
      "qt-any-explorer": [
        {
          "type": "webview",
          "id": "qtAny.view",
          "name": "Qt Any"
        }
      ]
    },
    "configuration": {
      "title": "Qt Any",
      "properties": {
        "qt-any.designerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Qt Designer executable (designer.exe)"
        }
      }
    },
    "commands": [
      {
        "command": "qt-any.createClass",
        "title": "Qt Any: Create Class (Non-UI)"
      },
      {
        "command": "qt-any.createUiClass",
        "title": "Qt Any: Create UI Class"
      },
      {
        "command": "qt-any.openInDesigner",
        "title": "Qt Any: Open in Qt Designer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "qt-any.openInDesigner",
          "when": "resourceExtname == .ui",
          "group": "navigation"
        },
        {
          "command": "qt-any.createClass",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "qt-any.createUiClass",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "languages": [
      {
        "id": "qt-ui",
        "aliases": [
          "Qt UI File",
          "ui"
        ],
        "extensions": [
          ".ui"
        ],
        "icon": {
          "light": "./resources/ui-file.svg",
          "dark": "./resources/ui-file.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.0.0"
  }
}
